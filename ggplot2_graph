
library(ggplot2)

# BP Ã© um dataframe com os seguintes valores: Term, pvalue, Coun e Fold Enrichment 

BP<- ggplot(BP_infec, aes(x= Fold.Enrichment, y=Term, size=Count, color=pvalue_infec)) + geom_point(alpha = 0.7) + 
  theme_get() + scale_size_area(max_size = 20) + yab("Term")
BP 

# Para ordenar em ordem crescente 

BP<- ggplot(BP_infec, aes(x= Fold.Enrichment, y=reorder(Term, desc(-pvalue_infec)), size=Count, color=pvalue_infec)) + geom_point(alpha = 0.7) + 
  theme_get() + scale_size_area(max_size = 20)
BP 

# Para salvar em pasta selecionada (salva no woeking directory)


ggsave(filename = "BP_infec.png",
       plot = print(BP),
       device = png,
       scale = 1,
       dpi = 300,
       units = c("cm"))
dev.off()
